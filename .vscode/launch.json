    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "REPL (TypeScript)",
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "args": ["${workspaceFolder}\\indice.ts"],
            "runtimeExecutable": "node",
            "runtimeArgs": ["--nolazy", "-r", "ts-node/register/transpile-only"],
        },
        {
            "type": "node",
            "request": "launch",
            "name": "REPL",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "program": "${workspaceFolder}\\indice.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Testes",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": ["${workspaceFolder}\\tests\\tests.egua"],
            "console": "integratedTerminal",
            "program": "${workspaceFolder}\\indice.js"
        }
    ]
}